@using WorkstationBrowser.Controllers.Remote
@{
    ViewBag.Title = "Home Page";
}

@if (Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-8=12 col-xs-12 col-lg-12">
            <h3 class="text-center"> Your Tasks </h3>
            <div class="section-scroll-1 ">
            @{
                if (Request.IsAuthenticated)
                {
                    Html.RenderAction("_Index", "Task", new
                    {
                        originalSession = (SessionWrapper) ViewData["CurrentSession"],
                        userid = ((SessionWrapper) ViewData["CurrentSession"]).CurrentUser.id,
                    }
                        );
                }
            }
            </div>

        </div>

        <div class="col-md-12 col-xs-12 col-lg-12">
            <h3 class="text-center"> Your Messages </h3>
            <div class="section-scroll-2 ">
                @{
                    if (Request.IsAuthenticated)
                    {
                        Html.RenderAction("_Index", "Message");
                    }
                }
            </div>
        </div>
    </div>
    <hr/>

}
<div class="row">


    <div class="col-md-12 col-xs-12 col-lg-12">
        <h3 class="text-center"> News </h3>

    </div>


</div>