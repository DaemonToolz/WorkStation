@model IEnumerable<WorkstationBrowser.Models.DepartmentHeavyModel>

@{
    ViewBag.Title = "Index";

}

<div class="row" style="padding-top: 50px">
@foreach (var item in Model)
{
    <div class="dept-project  col-md-5 col-xs-12 col-lg-3 col-sm-offset-1 col-xs-offset-1 col-md-offset-1 col-lg-offset-1" style="border: solid 1px #d7d7d7; border-radius:5px; margin-bottom:10px;">
        <div style="margin-top: 5px; vertical-align: middle;" class="panel-title">
            @Html.DisplayFor(modelItem => item.OriginalModel.name)
            <a href="#" style="color:red" class="pull-right btn btn-default glyphicon glyphicon-remove"></a>

        </div>
        <hr />
        <a href="#" class="btn btn-default glyphicon glyphicon-cog"></a> 
        <!-- Replace that part by a custom HTML Helper -->
        @Html.ActionLink(" ", "Str_Index", "Message", 
            new {to= Json.Encode(item.Users.Select(usr => usr.id).ToArray()) }
        , new { @class = "btn btn-default glyphicon glyphicon-envelope" })


        <a href="#" class="btn btn-default glyphicon glyphicon-comment"></a>
        
        @Html.ActionLink(" ", "Details", "Department", new
        {
            name = item.OriginalModel.name
        }, new{@class="btn btn-default glyphicon glyphicon-zoom-in"})
       
        <hr />
       
        <div style="margin-bottom:10px;">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
            Integer dictum lorem convallis nisi imperdiet, dictum pellentesque nisi ultrices. 
            Aenean vel dignissim massa. 
        </div>

    </div>
}
</div>

