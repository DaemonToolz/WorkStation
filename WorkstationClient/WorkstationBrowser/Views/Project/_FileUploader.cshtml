
@{
    Layout = null;
}

<div class="col-xs-12 col-md-12 col-lg-12">
    @using (Html.BeginForm("UploadFiles", "Project", FormMethod.Post, new { id = "fileUploadForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="fileUpload btn btn-default">
            <span class="glyphicon glyphicon-file"> </span>
            Select your files 
            <input type="file" class="upload" id="files"  multiple="multiple" name="files"/>
        </div>

        <input type="hidden" name="projectid" value="@((int)TempData["Projectid"])" />
        <input type="hidden" name="directoryPath" value="@((String)TempData["FileUploadRoot"])" />
        <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-cloud-upload"></span>
        </button>
    }
    
    <div id="selectedFiles"></div>

</div>
