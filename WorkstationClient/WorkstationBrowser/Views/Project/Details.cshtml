@using WorkstationBrowser.Controllers.Remote
@model WorkstationBrowser.SessionReference.ProjectModel

@{
    ViewBag.Title = "Details";

    Dictionary<String, bool> MyRights = ViewData["CurrentUserRights"] as Dictionary<String, bool>;
}

<h2> @Html.DisplayFor(model => model.name) </h2>


<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 text-center">
        <img src="~/UserContent/Project/@(Model.projpic)" width="150" height="150" class="profile-image img-circle" />
    </div>
</div>


@if (MyRights["CanEditTeam"])
{
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12" align="center">
            @using (Html.BeginForm("FileUpload", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.id)
                ;
                <div class="col-md-12 col-lg-12 col-xs-12" style="padding-top: 20px">
                    <label for="file">Edit Project picture </label>
                    <input type="file" name="file" id="file" style="width: 100%;" />
                </div>
                <div class="col-md-12 col-lg-12 col-xs-12" style="padding-top: 20px">
                    <button type="submit" class="btn btn-default">
                        <span class="fa fa-cloud-upload fa-2x"></span>
                    </button>
                </div>
            }
        </div>
    </div>
}

<div>
    <h4> Project details</h4>
    <hr />
    
    <div class="row">
        
        <div class="col-xs-12 col-md-12 col-lg-12">
            <h4> All Tasks </h4>
            <div class="section-scroll-2 ">
                @{Html.RenderAction("_Index", "Task", new
                  {
                      related = Model,
                      originalSession = (SessionWrapper) ViewData["CurrentSession"],
                      AddSection = (short)1
                  }
                      ); 
                }
            </div>

        </div>
        
        
        <div class="col-xs-12 col-md-12 col-lg-12">
            <h4> Documents </h4>
            @Html.ActionLink(" ", "ProjectDocuments", new
            {
                root = Model.root
            }, new{@class="glyphicon glyphicon-folder-open"})
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
