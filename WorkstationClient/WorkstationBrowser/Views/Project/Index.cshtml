@using WorkstationBrowser.SessionReference
@model IEnumerable<WorkstationBrowser.SessionReference.ProjectModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.root)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.root)
        </td>

        <td>
           
            @if (((ProjectModel) ViewData["MyProject"]).id == item.id && !item.name.Equals("Aucun")){
                @Html.ActionLink("Details", "Details", new {id = item.id})
            }
        </td>
    </tr>
}

</table>
