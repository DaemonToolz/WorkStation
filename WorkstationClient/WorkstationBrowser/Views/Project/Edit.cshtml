@model WorkstationBrowser.SessionReference.ProjectModel

@{
    ViewBag.Title = "Edit";
}



<h2> @Html.DisplayFor(model => model.name) </h2>


<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 text-center">
        <img src="~/UserContent/Project/@(Model.projpic)" width="150" height="150" class="profile-image img-circle" />
    </div>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ProjectModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
       
        <div class="form-group">
            <label class="col-md-2 col-lg-2 col-xs-2"> Priority </label>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.precedence, new { @type = "range", value = Model.precedence, min = 1, max = 100, @class = "form-control", style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(model => model.precedence, "", new {@class = "text-danger"})

            </div>
        </div>
        

        <div class="form-group">
            <label class="col-md-2 col-lg-2 col-xs-2"> Manager </label>

            <div class="col-md-8  col-lg-10 col-xs-10">
                @Html.DropDownList("admin_id", null, htmlAttributes: new { @class = "form-control", style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(model => model.admin_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <div class="  col-md-1">
                @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-default glyphicon glyphicon-remove" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
