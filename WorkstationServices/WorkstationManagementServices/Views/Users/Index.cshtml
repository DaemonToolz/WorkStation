@model IEnumerable<WorkstationManagementServices.Models.Database.Users>

@{
    ViewBag.Title = "Index";
}

<h2> Users </h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" >
        <i class="fa fa-plus" aria-hidden="true"> </i>
        Add new User
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email address
        </th>
        <th>
            Creation date
        </th>
        <th>
            Team
        </th>
        <th>
            Rank
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.creationdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rank)
        </td>
        <td>
 
            <a href="@Url.Action("Edit", new {id = item.id})">
                <i class="glyphicon glyphicon-cog" aria-hidden="true"> </i>
            </a>
               
            <a href="@Url.Action("Details", new {id = item.id})">
                <i class="glyphicon glyphicon-zoom-in" aria-hidden="true"> </i>
            </a>
       
            <a class="del_ico" href="@Url.Action("Delete",  new {id = item.id})">
                <i class="glyphicon glyphicon-trash" aria-hidden="true"> </i>
            </a>
            
        </td>
    </tr>
}

</table>
