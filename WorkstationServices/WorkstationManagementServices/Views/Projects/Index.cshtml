@model IEnumerable<WorkstationManagementServices.Models.Database.Project>

@{
    ViewBag.Title = "Index";
}

<h2> Projects </h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" >
        <i class="fa fa-plus" aria-hidden="true"> </i>
        Add new Project
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.root)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.root)
        </td>
        <td>
            <a href="@Url.Action("Edit", new {id = item.id})">
                <i class="glyphicon glyphicon-cog" aria-hidden="true"> </i>
            </a>
               
            <a href="@Url.Action("Details", new {id = item.id})">
                <i class="glyphicon glyphicon-zoom-in" aria-hidden="true"> </i>
            </a>
       
            <a class="del_ico" href="@Url.Action("Delete",  new {id = item.id})">
                <i class="glyphicon glyphicon-trash" aria-hidden="true"> </i>
            </a>
        </td>
    </tr>
}

</table>
